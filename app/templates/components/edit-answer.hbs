<form>
  <div class="form-group">
    <label for="{{answer.id}}-author">Author:</label>
    {{input class="form-control" value=author id="{{answer.id}}-author" placeholder=answer.author}}
  </div>

  <div class="form-group">
    <label for="{{answer.id}}-answer">Answer:</label>
    {{textarea class="form-control" value=text id="{{answer.id}}-answer" rows="3" placeholder=answer.text}}
  </div>

  <button class='btn btn-success' {{action 'updateAnswer' answer}}>Save</button>
</form>
