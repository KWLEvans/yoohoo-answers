<div class="panel panel-default">
  <div class="panel-heading">Edit your question</div>
  <div class="panel-body">
    <form>
      <div class="form-group">
        <label for="question-title">What's your question?</label>
        {{input class="form-control" value=title id="question-title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="question-author">Username:</label>
        {{input class="form-control" value=author id="question-author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="question-content">Explain your question:</label>
        {{textarea class="form-control" value=content id="question-content" rows="6" placeholder=question.content}}
      </div>

      <button class='btn btn-success' {{action 'updateQuestion' question}}>Save</button>
      <button class="btn btn-danger" {{action 'deleteQuestion' question}}>Delete</button>
    </form>
  </div>
</div>
